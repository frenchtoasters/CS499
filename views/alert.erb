<div class="row">
  <div class="col-md-6">
    <h1>Alert update</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <form class ="form panel" action="/update_alert" method="GET">
      <div class="form-group">
        <label>Fill in the alert message below and submit.</label>
        <textarea class="form-control" placeholder="Alert message" name="alert_message"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary">
      </div>
    </form>
    <h3>Or</h3>
    <a href="/update_alert?alert_message=" class="btn btn-primary">Clear alert</a>
  </div>
</div>
